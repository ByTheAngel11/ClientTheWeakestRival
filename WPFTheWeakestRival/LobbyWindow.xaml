<Window x:Class="WPFTheWeakestRival.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:loc="clr-namespace:WPFTheWeakestRival.Globalization"
        xmlns:controls="clr-namespace:WPFTheWeakestRival.Controls"
        Title="{loc:Loc lobbyTitle}"
        Height="540" Width="1100"
        MinWidth="1024" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        TextOptions.TextRenderingMode="Aliased"
        KeyDown="Window_KeyDown"
        Background="Transparent">

    <Window.Resources>
        <!-- Dimensiones barra superior -->
        <sys:Double x:Key="TopBarButtonWidth">130</sys:Double>
        <sys:Double x:Key="TopBarButtonHeight">32</sys:Double>
        <Thickness x:Key="TopBarButtonMargin">0,0,12,0</Thickness>

        <!-- Presencia -->
        <SolidColorBrush x:Key="PresenceOnlineBg" Color="#E9FFEF"/>
        <SolidColorBrush x:Key="PresenceOnlineFg" Color="#2FA35A"/>
        <SolidColorBrush x:Key="PresenceOfflineBg" Color="#E9F2FF"/>
        <SolidColorBrush x:Key="PresenceOfflineFg" Color="#2F5AA3"/>

        <!-- Iconos -->
        <BitmapImage x:Key="SettingsIcon" UriSource="pack://application:,,,/Assets/Icons/settings.png"/>
        <BitmapImage x:Key="FriendsIcon"  UriSource="pack://application:,,,/Assets/Icons/friends.png"/>

        <!-- Fondos -->
        <BitmapImage x:Key="LobbyBackground"
                     UriSource="pack://application:,,,/Assets/Backgrounds/LobbyBackground.png"/>
        <BitmapImage x:Key="FriendsLockerBackground"
                     UriSource="pack://application:,,,/Assets/Backgrounds/BackgroundListFriends.png"/>

        <!-- Avatar -->
        <sys:Double x:Key="AvatarSize">28</sys:Double>

        <!-- Overlay / Drawer -->
        <SolidColorBrush x:Key="OverlayBackdropBrush" Color="#99000000"/>
        <SolidColorBrush x:Key="OverlayCardBackgroundBrush" Color="White"/>
        <CornerRadius x:Key="OverlayCardCornerRadius">14</CornerRadius>
        <sys:Double x:Key="OverlayShadowBlur">16</sys:Double>
        <sys:Double x:Key="OverlayShadowOpacity">0.45</sys:Double>

        <!-- Card para el chat -->
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFFFF"/>

        <!-- Estilo genérico barra superior -->
        <Style x:Key="TopBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="{StaticResource TopBarButtonWidth}"/>
            <Setter Property="Height" Value="{StaticResource TopBarButtonHeight}"/>
            <Setter Property="Margin" Value="{StaticResource TopBarButtonMargin}"/>
        </Style>

        <!-- Botón de cerrar overlays -->
        <Style x:Key="OverlayCloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Content" Value="✕"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Fuente iconos -->
        <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>

        <!-- Botón icono barra superior -->
        <Style x:Key="TopBarIconButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource TopBarButtonStyle}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="{StaticResource TopBarButtonHeight}"/>
            <Setter Property="FontFamily" Value="{StaticResource IconFont}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Content" Value="&#xE713;"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22000000"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#33000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Botón avatar -->
        <Style x:Key="AvatarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="{StaticResource AvatarSize}"/>
            <Setter Property="Height" Value="{StaticResource AvatarSize}"/>
            <Setter Property="Margin" Value="{StaticResource TopBarButtonMargin}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="{loc:Loc profile}"/>
            <Setter Property="AutomationProperties.Name" Value="{loc:Loc profile}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="HoverRing"
                                    CornerRadius="999"
                                    Background="#22000000"
                                    Opacity="0"/>
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverRing"
                                        Property="Opacity"
                                        Value="1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="HoverRing"
                                        Property="Background"
                                        Value="#33000000"/>
                                <Setter TargetName="HoverRing"
                                        Property="Opacity"
                                        Value="1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TEMPLATE DE AMIGOS (mismo que en MainMenu) -->
        <DataTemplate x:Key="FriendItemTemplate">
            <Grid Margin="0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Width="40"
                        Height="40"
                        CornerRadius="10"
                        Background="Transparent">
                    <Image Source="{Binding Avatar}"
                           Stretch="UniformToFill"
                           SnapsToDevicePixels="True"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>

                <!-- Nombre + estado -->
                <StackPanel Grid.Column="1"
                            Margin="8,0,8,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding DisplayName}"
                               FontWeight="SemiBold"
                               Foreground="White"/>

                    <Border x:Name="PresencePill"
                            Margin="0,3,0,0"
                            Padding="8,2"
                            CornerRadius="10"
                            Background="{StaticResource PresenceOfflineBg}"
                            HorizontalAlignment="Left">
                        <TextBlock x:Name="PresenceText"
                                   Text="{Binding Presence}"
                                   FontSize="11"
                                   Foreground="{StaticResource PresenceOfflineFg}"/>
                    </Border>
                </StackPanel>
            </Grid>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsOnline}" Value="True">
                    <Setter TargetName="PresencePill"
                            Property="Background"
                            Value="{StaticResource PresenceOnlineBg}"/>
                    <Setter TargetName="PresenceText"
                            Property="Foreground"
                            Value="{StaticResource PresenceOnlineFg}"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- Botón estilo pizarrón para INICIAR -->
        <SolidColorBrush x:Key="ChalkButtonBackgroundBrush" Color="#294F3A"/>
        <SolidColorBrush x:Key="ChalkButtonBorderBrush" Color="#F8F8F8"/>
        <SolidColorBrush x:Key="ChalkButtonForegroundBrush" Color="#FDFDFD"/>

        <Style x:Key="ChalkBoardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ChalkButtonBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ChalkButtonBorderBrush}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Foreground" Value="{StaticResource ChalkButtonForegroundBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Segoe Print"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#33654A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#1E3A29"/>
                                <Setter TargetName="border"
                                        Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                        Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Animaciones drawer amigos -->
        <Storyboard x:Key="sbOpenFriendsDrawer">
            <DoubleAnimation Storyboard.TargetName="friendsDrawerTT"
                             Storyboard.TargetProperty="X"
                             To="0"
                             Duration="0:0:0.18"/>
            <DoubleAnimation Storyboard.TargetName="friendsDrawerHost"
                             Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:0.18"/>
        </Storyboard>
        <Storyboard x:Key="sbCloseFriendsDrawer">
            <DoubleAnimation Storyboard.TargetName="friendsDrawerTT"
                             Storyboard.TargetProperty="X"
                             To="340"
                             Duration="0:0:0.16"/>
            <DoubleAnimation Storyboard.TargetName="friendsDrawerHost"
                             Storyboard.TargetProperty="Opacity"
                             To="0"
                             Duration="0:0:0.16"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="12">
        <!-- Fondo de pizarrón igual al MainMenu -->
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource LobbyBackground}"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>

        <Grid x:Name="grdMainArea">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TOP BAR -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Izquierda: solo Settings -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <Button x:Name="btnSettings"
                            Style="{StaticResource TopBarIconButtonStyle}"
                            Height="51"
                            Width="57"
                            Margin="0,0,12,0"
                            Click="BtnSettingsClick"
                            ToolTip="{loc:Loc settings}">
                        <Image Source="{StaticResource SettingsIcon}"
                               Width="52"
                               Height="51"
                               Stretch="Uniform"
                               SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>
                </StackPanel>

                <!-- Derecha: Amigos + Avatar -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button x:Name="btnFriends"
                            Style="{StaticResource TopBarIconButtonStyle}"
                            Height="51"
                            Width="57"
                            Click="BtnFriendsClick"
                            ToolTip="{loc:Loc btnFriends}">
                        <Image Source="{StaticResource FriendsIcon}"
                               Width="47"
                               Height="49"
                               Stretch="Uniform"
                               SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>
                    <Button x:Name="btnProfile"
                            Style="{StaticResource AvatarButtonStyle}"
                            Margin="12,0,0,0"
                            Click="BtnModifyProfileClick"
                            Height="48"
                            Width="48">
                        <Image x:Name="imgAvatar"
                               Width="48"
                               Height="48"
                               Stretch="UniformToFill"
                               SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- CONTENIDO PRINCIPAL -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="380"/>
                </Grid.ColumnDefinitions>

                <!-- Izquierda: avatar local + lista de jugadores + botón INICIAR -->
                <Grid Grid.Column="0" Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Lista de jugadores del lobby -->
                    <ListBox x:Name="lstLobbyPlayers"
         Grid.Row="0"
         Margin="0,4,0,4"
         BorderThickness="0"
         Background="Transparent"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         VirtualizingPanel.IsVirtualizing="True"
         VirtualizingPanel.ScrollUnit="Pixel">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4"
                                      ContextMenuOpening="LobbyPlayerContextMenuOpening">
                                    <Grid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="{loc:Loc mnuLobbyReportPlayer}"
                      Click="MenuItemReportPlayerClick"
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                <MenuItem.Style>
                                                    <Style TargetType="MenuItem">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsMe}" Value="True">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </MenuItem.Style>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Grid.ContextMenu>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Avatar: ahora escalado, sin recortarse -->
                                    <Border Grid.Column="0"
                        Width="96"
                        Height="96"
                        CornerRadius="16"
                        Background="Transparent"
                        VerticalAlignment="Center">
                                        <Grid>
                                            <!-- AvatarControl -->
                                            <Viewbox Stretch="Uniform"
                                 StretchDirection="DownOnly"
                                 SnapsToDevicePixels="True"
                                 UseLayoutRounding="True"
                                 Visibility="Visible">
                                                <controls:AvatarControl x:Name="playerAvatar"
                                                   Appearance="{Binding AvatarAppearance}"
                                                   ProfileImage="{Binding Avatar}"
                                                   SnapsToDevicePixels="True"
                                                   UseLayoutRounding="True"/>
                                            </Viewbox>

                                            <!-- Fallback a imagen si no hay Appearance -->
                                            <Viewbox Stretch="Uniform"
                                 StretchDirection="DownOnly"
                                 SnapsToDevicePixels="True"
                                 UseLayoutRounding="True">
                                                <Image Source="{Binding Avatar}"
                                   SnapsToDevicePixels="True"
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding AvatarAppearance}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </Viewbox>
                                        </Grid>
                                    </Border>

                                    <!-- Nombre del jugador -->
                                    <TextBlock Grid.Column="1"
                           Text="{Binding DisplayName}"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="14" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>


                    <!-- Botón INICIAR -->
                    <Button x:Name="btnStart"
                            Grid.Row="1"
                            Style="{StaticResource ChalkBoardButtonStyle}"
                            Content="{loc:Loc startMatch}"
                            Width="180"
                            Height="46"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Margin="8"
                            Click="BtnStartMatchClick"/>
                </Grid>

                <!-- Derecha: Chat -->
                <Border Grid.Column="1"
                        Margin="8"
                        Background="Transparent"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="8">
                    <Grid Margin="10" MinWidth="360">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>

                        <!-- Header lobby -->
                        <Grid Grid.Row="0" Margin="0,0,0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       x:Name="txtLobbyHeader"
                                       Text="{loc:Loc lobbyTitle}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,6"
                                       Foreground="White"/>
                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock x:Name="txtAccessCode"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0,0,8,0"
                                           Foreground="White"
                                           Opacity="0.95"/>
                                <Button x:Name="btnCopyCode"
                                        Width="26"
                                        Height="26"
                                        Padding="0"
                                        Margin="0,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Copiar código"
                                        Click="BtnCopyCodeClick">
                                    <TextBlock FontSize="14"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center">
                                        <Run Text="⧉"/>
                                        <Run Language="es-mx"/>
                                    </TextBlock>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Lista de mensajes -->
                        <ListBox Grid.Row="2"
                                 x:Name="lstChatMessages"
                                 Margin="0,4,0,0"
                                 BorderBrush="Transparent"
                                 Background="Transparent"
                                 BorderThickness="1"
                                 Padding="6"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 Foreground="White"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.ScrollUnit="Pixel">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,3">
                                        <TextBlock>
                                            <Run Text="{Binding Author}"
                                                 FontWeight="SemiBold"/>
                                            <Run Text=" · "/>
                                            <Run Text="{Binding Time}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Text}"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Input chat -->
                        <Grid Grid.Row="3" Margin="0,6,0,0">
                            <Border Background="#FFFFFFFF"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    CornerRadius="4"/>
                            <TextBox x:Name="txtChatInput"
                                     Margin="4"
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"
                                     KeyDown="TxtChatInputKeyDown"/>
                            <TextBlock Text="{loc:Loc chatPlaceholder}"
                                       Margin="10,0,0,0"
                                       Foreground="#99000000"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=txtChatInput}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsKeyboardFocused, ElementName=txtChatInput}" Value="True">
                                                <Setter Property="Foreground" Value="#55000000"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Drawer de amigos (mismo estilo que MainMenu) -->
        <Grid x:Name="friendsDrawerHost"
              Visibility="Collapsed"
              Opacity="0"
              Panel.ZIndex="95">
            <Rectangle x:Name="friendsDimmer"
                       Fill="{StaticResource OverlayBackdropBrush}"
                       MouseDown="FriendsDimmerMouseDown"/>

            <Border x:Name="friendsDrawer"
                    Width="340"
                    CornerRadius="20,0,0,14"
                    Padding="14"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch">

                <Border.RenderTransform>
                    <TranslateTransform x:Name="friendsDrawerTT" X="340"/>
                </Border.RenderTransform>

                <Border.Background>
                    <ImageBrush ImageSource="{StaticResource FriendsLockerBackground}"
                                Stretch="UniformToFill"
                                AlignmentX="Center"
                                AlignmentY="Center"/>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <DockPanel Grid.Row="0"
                               Margin="150,0,16,10"
                               LastChildFill="False">
                        <TextBlock Text="{loc:Loc btnFriends}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   DockPanel.Dock="Left"
                                   VerticalAlignment="Center"
                                   Foreground="White"/>
                    </DockPanel>

                    <!-- Lista de amigos -->
                    <Grid Grid.Row="1">
                        <Border Background="#DD000000"
                                CornerRadius="12"
                                Margin="150,8,16,8"
                                HorizontalAlignment="Stretch">
                            <Grid>
                                <StackPanel x:Name="friendsEmptyPanel"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="16"
                                            Visibility="Collapsed">
                                    <TextBlock Text="{loc:Loc noFriends}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                    <TextBlock Text="{loc:Loc inviteFriends}"
                                               Opacity="0.75"
                                               Margin="0,4,0,0"
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                </StackPanel>

                                <ListBox x:Name="lstFriends"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ItemTemplate="{StaticResource FriendItemTemplate}"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     VirtualizingPanel.IsVirtualizing="True"
                                     VirtualizingPanel.ScrollUnit="Pixel"
                                     Margin="4"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Botones de abajo -->
                    <StackPanel Grid.Row="2"
                                Margin="150,10,16,10">
                        <Border Background="Transparent"
                                CornerRadius="12"
                                Padding="8,6,8,6"
                                Margin="0,0,0,8">
                            <Button x:Name="btnSendFriendRequest"
                                    Height="30"
                                    Content="{loc:Loc btnSendRequests}"
                                    Click="BtnSendFriendRequestClick"
                                    Background="#FFEFEFEF"
                                    BorderThickness="0"/>
                        </Border>

                        <Border Background="#DD000000"
                                CornerRadius="12"
                                Padding="6,6,6,6">
                            <Button x:Name="btnViewRequests"
                                    Height="30"
                                    Click="BtnViewRequestsClick"
                                    Background="Transparent"
                                    BorderThickness="0">
                                <Grid>
                                    <TextBlock Text="{loc:Loc btnRequests}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,36,0"
                                               Foreground="White"/>
                                    <Border Background="#FFEFEFEF"
                                            CornerRadius="10"
                                            Padding="6,2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                        <TextBlock x:Name="txtRequestsCount"
                                                   Text="0"
                                                   FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Prueba para ver si avisa cuando se esta reconectando -->

        <Grid x:Name="grdReconnectOverlay"
      Visibility="Collapsed"
      Background="#80000000">

            <Border Padding="18"
            CornerRadius="12"
            Background="#FF1E1E1E"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image x:Name="imgReconnect"
                   Width="64"
                   Height="64"
                   Stretch="Uniform"
                   Margin="0,0,0,10"
                   Source="/Assets/reconnecting.png" />

                    <TextBlock x:Name="txtReconnectStatus"
                       Text="Reconectando..."
                       FontSize="16"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

                    <ProgressBar x:Name="prgReconnect"
                         Width="240"
                         Height="10"
                         IsIndeterminate="True"/>
                </StackPanel>
            </Border>
        </Grid>



    </Grid>
    
    
    
</Window>
