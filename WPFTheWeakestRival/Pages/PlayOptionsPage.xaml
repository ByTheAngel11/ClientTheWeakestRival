<Page x:Class="WPFTheWeakestRival.Pages.PlayOptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:loc="clr-namespace:WPFTheWeakestRival.Globalization"
      Title="{loc:Loc playOptionsTitle}"
      Background="Transparent">

    <Grid Margin="32"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <!-- Crear lobby -->
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <!-- Separador O -->
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <!-- Código + botón -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="{loc:Loc playChoose}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Foreground="White"/>

        <!-- Botón Crear lobby -->
        <Button Grid.Row="2"
                x:Name="btnCreate"
                Width="260"
                Height="38"
                Content="{loc:Loc btnCreateLobby}"
                Background="#1B6BB6"
                Foreground="White"
                Click="BtnCreateClick"/>

        <!-- Separador con dos líneas y una O -->
        <Grid Grid.Row="4"
              Margin="0,0,0,0"
              HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Height="1.5"
                    Background="#CCFFFFFF"
                    VerticalAlignment="Center"
                    Margin="0,0,8,0"/>

            <TextBlock Grid.Column="1"
                       Text="O"
                       FontWeight="Bold"
                       Foreground="#FFFFFFFF"
                       Margin="4,0"
                       VerticalAlignment="Center"/>

            <Border Grid.Column="2"
                    Height="1.5"
                    Background="#CCFFFFFF"
                    VerticalAlignment="Center"
                    Margin="8,0,0,0"/>
        </Grid>

        <!-- Código + botón Unirse -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBox x:Name="txtCode"
                     Width="180"
                     Height="32"
                     VerticalContentAlignment="Center"
                     MaxLength="12"
                     ToolTip="{loc:Loc playEnterCodeTip}"
                     Margin="0,0,8,0"/>

            <Button x:Name="btnJoin"
                    Width="180"
                    Height="32"
                    Content="{loc:Loc lobbyJoinByCode}"
                    Background="#D4CE20"
                    Foreground="Black"
                    Click="BtnJoinClick"/>
        </StackPanel>
    </Grid>
</Page>
