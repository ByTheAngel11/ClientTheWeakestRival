<Page x:Class="WPFTheWeakestRival.Pages.AddFriendPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:language="clr-namespace:WPFTheWeakestRival.Properties.Langs"
      Title="{x:Static language:Lang.addFriendSearchTooltip}"
      SnapsToDevicePixels="True"
      TextOptions.TextRenderingMode="Aliased">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style TargetType="Button" x:Key="BaseButton">
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="86"/>
        </Style>
        <Style TargetType="Button" x:Key="HoverScaleButton" BasedOn="{StaticResource BaseButton}">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.06" ScaleY="1.06"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblTitle"
                   Text="{x:Static language:Lang.addFriendTitle}"
                   FontSize="22"
                   FontWeight="Bold"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBox x:Name="txtSearchQuery"
                     Width="360"
                     Height="28"
                     Margin="0,0,8,0"
                     VerticalContentAlignment="Center"
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="{x:Static language:Lang.addFriendSearchTooltip}"/>
            <Button x:Name="btnSearch"
                    Style="{StaticResource HoverScaleButton}"
                    Content="{x:Static language:Lang.commonSearch}"
                    Command="{Binding SearchCommand}"/>
            <TextBlock x:Name="lblStatus"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Text="{Binding StatusText}"/>
        </StackPanel>

        <Border Grid.Row="4" BorderBrush="#40000000" BorderThickness="1" CornerRadius="6" Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="lstResults"
                              ItemsSource="{Binding Results}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,4" Padding="8" CornerRadius="6" Background="#0A000000">
                                <DockPanel LastChildFill="False">
                                    <Image Width="36"
                                           Height="36"
                                           Stretch="UniformToFill"
                                           Margin="0,0,8,0"
                                           Source="{Binding Avatar}"
                                           ClipToBounds="True"/>
                                    <StackPanel Orientation="Vertical"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Left"
                                                Width="320">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Email}" Opacity="0.7" FontSize="12"/>
                                        <TextBlock Text="{Binding StateText}" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Style="{StaticResource HoverScaleButton}"
                                                Content="{x:Static language:Lang.addFriendAccept}"
                                                Visibility="{Binding ShowAccept, Converter={StaticResource BoolToVis}}"
                                                Command="{Binding DataContext.AcceptCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Style="{StaticResource HoverScaleButton}"
                                                Content="{Binding AddButtonText}"
                                                IsEnabled="{Binding CanAdd}"
                                                Command="{Binding DataContext.AddCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="btnClose"
                    Style="{StaticResource HoverScaleButton}"
                    Content="{x:Static language:Lang.commonClose}"
                    Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</Page>
