<Page x:Class="WPFTheWeakestRival.Pages.MatchSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Configuración de partida">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Configuración de partida"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <!-- Privacidad -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,4">
            <CheckBox x:Name="chkPrivate" VerticalAlignment="Center"/>
            <TextBlock Text="  Partida privada (usa código para unirse)"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Máx. jugadores -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,4,0,4">
            <TextBlock Text="Máximo de jugadores:"
                       VerticalAlignment="Center"
                       Width="160"/>
            <TextBox x:Name="txtMaxPlayers"
                     Width="60"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Right"/>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Cancelar"
                    Width="90"
                    Margin="0,0,8,0"
                    Click="BtnCancelClick"/>
            <Button Content="Guardar"
                    Width="90"
                    Click="BtnSaveClick"/>
        </StackPanel>
    </Grid>
</Page>
