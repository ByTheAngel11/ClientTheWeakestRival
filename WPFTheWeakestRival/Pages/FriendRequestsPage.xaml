<Page x:Class="WPFTheWeakestRival.Pages.FriendRequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Solicitudes de amistad"
      SnapsToDevicePixels="True"
      TextOptions.TextRenderingMode="Aliased">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="86"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Solicitudes de amistad" FontSize="22" FontWeight="Bold"/>

        <!-- OJO: ColumnDefinitions con sintaxis WPF + espacio con Margin -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Recibidas -->
            <Border Grid.Column="0"
                    Margin="0,0,8,0"
                    BorderBrush="#40000000" BorderThickness="1" CornerRadius="6" Padding="8">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Recibidas" FontWeight="SemiBold" DockPanel.Dock="Top" Margin="0,0,0,8"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstIncoming">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,4" Padding="8" CornerRadius="6" Background="#0A000000">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="44"/>
                                                <!-- avatar -->
                                                <ColumnDefinition Width="*"/>
                                                <!-- texto -->
                                                <ColumnDefinition Width="Auto"/>
                                                <!-- acciones -->
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0" Width="36" Height="36" Margin="0,0,8,0"
             Stretch="UniformToFill" Source="{Binding Avatar}" ClipToBounds="True"/>

                                            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Subtitle}" Opacity="0.7" FontSize="12"/>
                                            </StackPanel>

                                            <!-- Recibidas: aceptar + rechazar -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Content="Aceptar" Click="btnAccept_Click"/>
                                                <Button Content="Rechazar" Click="btnReject_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Enviadas -->
            <Border Grid.Column="1"
                    Margin="8,0,0,0"
                    BorderBrush="#40000000" BorderThickness="1" CornerRadius="6" Padding="8">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Enviadas" FontWeight="SemiBold" DockPanel.Dock="Top" Margin="0,0,0,8"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstOutgoing">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,4" Padding="8" CornerRadius="6" Background="#0A000000">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="44"/>
                                                <!-- avatar -->
                                                <ColumnDefinition Width="*"/>
                                                <!-- texto -->
                                                <ColumnDefinition Width="Auto"/>
                                                <!-- acciones -->
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0" Width="36" Height="36" Margin="0,0,8,0"
             Stretch="UniformToFill" Source="{Binding Avatar}" ClipToBounds="True"/>

                                            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Subtitle}" Opacity="0.7" FontSize="12"/>
                                            </StackPanel>

                                            <!-- Recibidas: aceptar + rechazar -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Content="Cancelar" Click="btnCancel_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cerrar" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Page>
