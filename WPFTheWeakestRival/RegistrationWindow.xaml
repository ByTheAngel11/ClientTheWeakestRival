<Window x:Class="WPFTheWeakestRival.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:WPFTheWeakestRival.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.registHeader}"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        TextOptions.TextRenderingMode="Aliased">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado + selector de idioma -->
        <DockPanel Grid.Row="0" LastChildFill="False">
            <ComboBox x:Name="cmbLanguage"
                      Width="140"
                      DockPanel.Dock="Right"
                      VerticalAlignment="Center"
                      Margin="0,0,0,0"/>
            <Label x:Name="lblRegistration"
                   Content="{x:Static language:Lang.registerTitle}"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   HorizontalContentAlignment="Center"/>
        </DockPanel>

        <!-- Formulario -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="140"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label x:Name="lblUsername"
                   Grid.Row="0" Grid.Column="0"
                   Content="{x:Static language:Lang.registerDisplayName}"
                   HorizontalContentAlignment="Right" VerticalAlignment="Center"/>
            <TextBox x:Name="txtUsername"
                     Grid.Row="0" Grid.Column="2"
                     MinWidth="220" />

            <Label x:Name="lblEmail"
                   Grid.Row="2" Grid.Column="0"
                   Content="{x:Static language:Lang.lblEmail}"
                   HorizontalContentAlignment="Right" VerticalAlignment="Center"/>
            <TextBox x:Name="txtEmail"
                     Grid.Row="2" Grid.Column="2"
                     MinWidth="220"/>

            <Label x:Name="lblPassword"
                   Grid.Row="4" Grid.Column="0"
                   Content="{x:Static language:Lang.lblPassword}"
                   HorizontalContentAlignment="Right" VerticalAlignment="Center"/>
            <PasswordBox x:Name="pstPassword"
                         Grid.Row="4" Grid.Column="2"
                         MinWidth="220"/>

            <Label x:Name="lblConfirmPassword"
                   Grid.Row="6" Grid.Column="0"
                   Content="{x:Static language:Lang.lblConfirmPassword}"
                   HorizontalContentAlignment="Right" VerticalAlignment="Center"/>
            <PasswordBox x:Name="pstConfirmPassword"
                         Grid.Row="6" Grid.Column="2"
                         MinWidth="220"/>

            <!-- Vista previa de imagen (columna derecha) -->
            <Image x:Name="imgPreview"
                   Grid.Row="0" Grid.Column="4"
                   Grid.RowSpan="7"
                   Width="120" Height="120"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Stretch="UniformToFill"/>

            <Button x:Name="btnChooseImage"
                    Grid.Row="8" Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Content="{x:Static language:Lang.btnChooseImage}"
                    Width="160" Height="28"
                    HorizontalAlignment="Left"
                    Click="ChooseImageClick"/>

            <TextBlock x:Name="txtImgName"
                       Grid.Row="10" Grid.Column="0"
                       Grid.ColumnSpan="5"
                       TextAlignment="Center"
                       TextTrimming="CharacterEllipsis"/>
        </Grid>

        <!-- Acciones -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnBack"
                    Content="{x:Static language:Lang.cancel}"
                    Width="140" Height="30"
                    Margin="0,0,12,0"
                    Background="Red" Foreground="White"
                    Click="CancelClick"/>
            <Button x:Name="btnRegister"
                    Content="{x:Static language:Lang.regist}"
                    Width="140" Height="30"
                    Background="Blue" Foreground="White"
                    Click="RegisterClick"/>
        </StackPanel>
    </Grid>
</Window>
