<!-- MainMenuWindow.xaml -->
<Window x:Class="WPFTheWeakestRival.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:loc="clr-namespace:WPFTheWeakestRival.Globalization"
        xmlns:controls="clr-namespace:WPFTheWeakestRival.Controls"
        Title="{loc:Loc mainMenuTitle}"
        Height="540" Width="1100"
        MinWidth="1024" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        TextOptions.TextRenderingMode="Aliased"
        KeyDown="Window_KeyDown"
        Background="Transparent">
    <Window.Resources>
        <sys:Double x:Key="TopBarButtonWidth">130</sys:Double>
        <sys:Double x:Key="TopBarButtonHeight">32</sys:Double>
        <Thickness x:Key="TopBarButtonMargin">0,0,12,0</Thickness>
        <SolidColorBrush x:Key="PresenceOnlineBg" Color="#E9FFEF"/>
        <SolidColorBrush x:Key="PresenceOnlineFg" Color="#2FA35A"/>
        <SolidColorBrush x:Key="PresenceOfflineBg" Color="#E9F2FF"/>
        <SolidColorBrush x:Key="PresenceOfflineFg" Color="#2F5AA3"/>
        <BitmapImage x:Key="SettingsIcon" UriSource="pack://application:,,,/Assets/Icons/settings.png"/>
        <BitmapImage x:Key="FriendsIcon"  UriSource="pack://application:,,,/Assets/Icons/friends.png"/>
        <BitmapImage x:Key="ChalkboardBackground"
             UriSource="pack://application:,,,/Assets/Backgrounds/ChalkboardGreen.png"/>
        <BitmapImage x:Key="FriendsLockerBackground"
             UriSource="pack://application:,,,/Assets/Backgrounds/BackgroundListFriends.png"/>
        <BitmapImage x:Key="PersonalizationIcon"
             UriSource="pack://application:,,,/Assets/Icons/personalization.png"/>
        <BitmapImage x:Key="ScoreboardIcon"
             UriSource="pack://application:,,,/Assets/Icons/scoreboard.png"/>
        <BitmapImage x:Key="AddFriendBackground"
             UriSource="pack://application:,,,/Assets/Backgrounds/AddFriendBackground.png"/>
        <sys:Double x:Key="AvatarSize">28</sys:Double>
        <SolidColorBrush x:Key="OverlayBackdropBrush" Color="#99000000"/>
        <SolidColorBrush x:Key="OverlayCardBackgroundBrush" Color="White"/>
        <CornerRadius x:Key="OverlayCardCornerRadius">14</CornerRadius>
        <sys:Double x:Key="OverlayShadowBlur">16</sys:Double>
        <sys:Double x:Key="OverlayShadowOpacity">0.45</sys:Double>

        <Style x:Key="TopBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="{StaticResource TopBarButtonWidth}"/>
            <Setter Property="Height" Value="{StaticResource TopBarButtonHeight}"/>
            <Setter Property="Margin" Value="{StaticResource TopBarButtonMargin}"/>
        </Style>

        <Style x:Key="OverlayCloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Content" Value="✕"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>

        <Style x:Key="TopBarIconButtonStyle" TargetType="Button" BasedOn="{StaticResource TopBarButtonStyle}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="{StaticResource TopBarButtonHeight}"/>
            <Setter Property="FontFamily" Value="{StaticResource IconFont}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Content" Value="&#xE713;"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="{loc:Loc settings}"/>
            <Setter Property="AutomationProperties.Name" Value="{loc:Loc settings}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22000000"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#33000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AvatarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="{StaticResource AvatarSize}"/>
            <Setter Property="Height" Value="{StaticResource AvatarSize}"/>
            <Setter Property="Margin" Value="{StaticResource TopBarButtonMargin}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="{loc:Loc profile}"/>
            <Setter Property="AutomationProperties.Name" Value="{loc:Loc profile}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="HoverRing" CornerRadius="999" Background="#22000000" Opacity="0"/>
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverRing" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="HoverRing" Property="Background" Value="#33000000"/>
                                <Setter TargetName="HoverRing" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="FriendItemTemplate">
            <Grid Margin="0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Width="40"
                        Height="40"
                        CornerRadius="10"
                        Background="Transparent">
                    <Image Source="{Binding Avatar}"
                           Stretch="UniformToFill"
                           SnapsToDevicePixels="True"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>

                <StackPanel Grid.Column="1"
                            Margin="8,0,8,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding DisplayName}"
                               FontWeight="SemiBold"
                               Foreground="White"/>

                    <Border x:Name="PresencePill"
                            Margin="0,3,0,0"
                            Padding="8,2"
                            CornerRadius="10"
                            Background="{StaticResource PresenceOfflineBg}"
                            HorizontalAlignment="Left">
                        <TextBlock x:Name="PresenceText"
                                   Text="{Binding Presence}"
                                   FontSize="11"
                                   Foreground="{StaticResource PresenceOfflineFg}"/>
                    </Border>
                </StackPanel>
            </Grid>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsOnline}" Value="True">
                    <Setter TargetName="PresencePill"
                            Property="Background"
                            Value="{StaticResource PresenceOnlineBg}"/>
                    <Setter TargetName="PresenceText"
                            Property="Foreground"
                            Value="{StaticResource PresenceOnlineFg}"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <SolidColorBrush x:Key="ChalkButtonBackgroundBrush" Color="#294F3A"/>
        <SolidColorBrush x:Key="ChalkButtonBorderBrush" Color="#F8F8F8"/>
        <SolidColorBrush x:Key="ChalkButtonForegroundBrush" Color="#FDFDFD"/>

        <Style x:Key="ChalkBoardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ChalkButtonBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ChalkButtonBorderBrush}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Foreground" Value="{StaticResource ChalkButtonForegroundBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Segoe Print"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#33654A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#1E3A29"/>
                                <Setter TargetName="border"
                                        Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                        Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="sbOpenFriendsDrawer">
            <DoubleAnimation Storyboard.TargetName="friendsDrawerTT" Storyboard.TargetProperty="X" To="0" Duration="0:0:0.18"/>
            <DoubleAnimation Storyboard.TargetName="friendsDrawerHost" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.18"/>
        </Storyboard>
        <Storyboard x:Key="sbCloseFriendsDrawer">
            <DoubleAnimation Storyboard.TargetName="friendsDrawerTT" Storyboard.TargetProperty="X" To="340" Duration="0:0:0.16"/>
            <DoubleAnimation Storyboard.TargetName="friendsDrawerHost" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.16"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource ChalkboardBackground}"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center" />
        </Grid.Background>

        <Grid x:Name="grdMainArea">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <Button x:Name="btnSettings"
                            Style="{StaticResource TopBarIconButtonStyle}"
                            Height="51" Width="57"
                            Margin="0,0,12,0"
                            Click="BtnSettingsClick"
                            ToolTip="{loc:Loc settings}">
                        <Image Source="{StaticResource SettingsIcon}"
                               Width="52"
                               Height="51"
                               Stretch="Uniform"
                               SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>

                    <Button x:Name="btnPersonalization"
                            Style="{StaticResource TopBarIconButtonStyle}"
                            Height="51"
                            Width="57"
                            Margin="0,0,12,0"
                            ToolTip="{loc:Loc btnPersonalization}">
                        <Image Source="{StaticResource PersonalizationIcon}"
                               Width="52"
                               Height="51"
                               Stretch="Uniform"
                               SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality" />
                    </Button>

                    <Button x:Name="btnScore"
                            Style="{StaticResource TopBarIconButtonStyle}"
                            Height="51"
                            Width="57"
                            ToolTip="{loc:Loc btnScoreboard}">
                        <Image Source="{StaticResource ScoreboardIcon}"
                               Width="52"
                               Height="51"
                               Stretch="Uniform"
                               SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality" />
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button x:Name="btnFriends"
                            Style="{StaticResource TopBarIconButtonStyle}"
                            Height="51" Width="57"
                            Click="BtnFriendsClick"
                            ToolTip="{loc:Loc btnFriends}">
                        <Image Source="{StaticResource FriendsIcon}"
                               Width="47"
                               Height="49"
                               Stretch="Uniform"
                               SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>
                    <Button x:Name="btnProfile"
                            Style="{StaticResource AvatarButtonStyle}"
                            Margin="12,0,0,0"
                            Click="BtnModifyProfileClick"
                            Height="48" Width="48">
                        <Image x:Name="imgAvatar"
                               Width="48"
                               Height="48"
                               Stretch="UniformToFill"
                               SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="380"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="198,10,198,6" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <!-- zona grande central para el avatar -->
                        <RowDefinition Height="*"/>
                        <!-- fila para el botón -->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- AVATAR CENTRADO Y MÁS GRANDE -->
                    <Viewbox Grid.Row="0"
             Stretch="Uniform"
                        HorizontalAlignment="Center"
             VerticalAlignment="Center">
                        <controls:AvatarControl x:Name="UserAvatarControl"
                                Width="260"
                                Height="320"
                                SnapsToDevicePixels="True"
                                UseLayoutRounding="True"/>
                    </Viewbox>

                    <!-- BOTÓN JUGAR ABAJO IZQUIERDA -->
                    <Button Grid.Row="1"
            x:Name="btnPlay"
            Style="{StaticResource ChalkBoardButtonStyle}"
            Content="{loc:Loc btnPlay}"
            Width="180"
            Height="46"
            HorizontalAlignment="Left"
            Margin="-193,13,0,12"
            Click="BtnPlayClick"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid x:Name="pnlOverlayHost" Visibility="Collapsed" Opacity="0" Panel.ZIndex="99">
            <Rectangle Fill="{StaticResource OverlayBackdropBrush}"/>

            <Border Width="700"
                    Height="420"
                    Background="Transparent"
                    CornerRadius="{StaticResource OverlayCardCornerRadius}"
                    Padding="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="{StaticResource OverlayShadowBlur}"
                                      ShadowDepth="0"
                                      Opacity="{StaticResource OverlayShadowOpacity}"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel LastChildFill="False" Margin="0,0,0,12"/>
                    <Grid x:Name="overlayContentGrid"
                          Grid.Row="1"
                          Background="Transparent">
                        <Frame x:Name="frmOverlayFrame"
                               NavigationUIVisibility="Hidden"
                               Background="Transparent"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="friendsDrawerHost"
              Visibility="Collapsed"
              Opacity="0"
              Panel.ZIndex="95">

            <Rectangle x:Name="friendsDimmer"
                       Fill="{StaticResource OverlayBackdropBrush}"
                       MouseDown="FriendsDimmerMouseDown"/>

            <Border x:Name="friendsDrawer"
                    Width="340"
                    CornerRadius="20,0,0,14"
                    Padding="14"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch">

                <Border.RenderTransform>
                    <TranslateTransform x:Name="friendsDrawerTT" X="340"/>
                </Border.RenderTransform>

                <Border.Background>
                    <ImageBrush ImageSource="{StaticResource FriendsLockerBackground}"
                                Stretch="UniformToFill"
                                AlignmentX="Center"
                                AlignmentY="Center" />
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0"
                               Margin="150,0,16,10"
                               LastChildFill="False">
                        <TextBlock Text="{loc:Loc btnFriends}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   DockPanel.Dock="Left"
                                   VerticalAlignment="Center"
                                   Foreground="White"/>
                    </DockPanel>

                    <Grid Grid.Row="1">
                        <Border Background="#DD000000"
                                CornerRadius="12"
                                Margin="150,8,16,8"
                                HorizontalAlignment="Stretch">
                            <Grid>
                                <StackPanel x:Name="friendsEmptyPanel"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="16"
                                            Visibility="Collapsed">
                                    <TextBlock Text="{loc:Loc noFriends}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                    <TextBlock Text="{loc:Loc inviteFriends}"
                                               Opacity="0.75"
                                               Margin="0,4,0,0"
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                </StackPanel>

                                <ListBox x:Name="lstFriends"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         ItemTemplate="{StaticResource FriendItemTemplate}"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.ScrollUnit="Pixel"
                                         Margin="4"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="2"
                                Margin="150,10,16,10">
                        <Border Background="Transparent"
                                CornerRadius="12"
                                Padding="8,6,8,6"
                                Margin="0,0,0,8">
                            <Button x:Name="btnSendFriendRequest"
                                    Height="30"
                                    Content="{loc:Loc btnSendRequests}"
                                    Click="BtnSendFriendRequestClick"
                                    Background="#FFEFEFEF"
                                    BorderThickness="0"/>
                        </Border>

                        <Border Background="#DD000000"
                                CornerRadius="12"
                                Padding="6,6,6,6">
                            <Button x:Name="btnViewRequests"
                                    Height="30"
                                    Click="BtnViewRequestsClick"
                                    Background="Transparent"
                                    BorderThickness="0">
                                <Grid>
                                    <TextBlock Text="{loc:Loc btnRequests}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,36,0"
                                               Foreground="White"/>
                                    <Border Background="#FFEFEFEF"
                                            CornerRadius="10"
                                            Padding="6,2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                        <TextBlock x:Name="txtRequestsCount"
                                                   Text="0"
                                                   FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
