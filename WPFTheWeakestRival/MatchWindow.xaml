<Window x:Class="WPFTheWeakestRival.MatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:WPFTheWeakestRival.Globalization"
        Title="{loc:Loc matchTitle}"
        Height="450"
        Width="800"
        MinWidth="700"
        MinHeight="400"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        TextOptions.TextRenderingMode="Aliased"
        Background="#FF1B1B1B">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER BÁSICO -->
        <Border Grid.Row="0"
                Background="#222"
                CornerRadius="8"
                Padding="10"
                BorderBrush="#444"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical">
                    <TextBlock x:Name="txtMatchTitle"
                               Text="Partida"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"/>

                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Código: "
                                   Foreground="#CCCCCC"/>
                        <TextBlock x:Name="txtMatchCode"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                        <TextBlock Text="Estado: "
                                   Foreground="#CCCCCC"/>
                        <TextBlock x:Name="txtMatchState"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                        <TextBlock Text="Jugadores: "
                                   Foreground="#CCCCCC"/>
                        <TextBlock x:Name="txtPlayersSummary"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Cerrar"
                        Width="80"
                        Height="28"
                        Margin="8,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="BtnCloseClick"/>
            </Grid>
        </Border>

        <!-- CONFIGURACIÓN DE LA PARTIDA -->
        <Border Grid.Row="1"
                Margin="0,8,0,0"
                Background="#222"
                CornerRadius="8"
                Padding="10"
                BorderBrush="#444"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Configuración"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,0,6"/>

                <UniformGrid Columns="2" Rows="3" Margin="0,4,0,0">
                    <StackPanel Margin="0,2,12,2">
                        <TextBlock Text="Puntaje inicial" Foreground="#CCCCCC"/>
                        <TextBlock x:Name="txtStartingScore" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,2,12,2">
                        <TextBlock Text="Puntaje máximo" Foreground="#CCCCCC"/>
                        <TextBlock x:Name="txtMaxScore" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,2,12,2">
                        <TextBlock Text="Puntos por acierto" Foreground="#CCCCCC"/>
                        <TextBlock x:Name="txtPointsCorrect" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,2,12,2">
                        <TextBlock Text="Puntos por error" Foreground="#CCCCCC"/>
                        <TextBlock x:Name="txtPointsWrong" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,2,12,2">
                        <TextBlock Text="Puntos por eliminación" Foreground="#CCCCCC"/>
                        <TextBlock x:Name="txtPointsElimination" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Margin="0,2,12,2">
                        <TextBlock Text="Desempate moneda" Foreground="#CCCCCC"/>
                        <TextBlock x:Name="txtCoinflip" Foreground="White"/>
                    </StackPanel>
                </UniformGrid>
            </StackPanel>
        </Border>

        <!-- LISTA SÚPER SIMPLE DE JUGADORES -->
        <Border Grid.Row="3"
                Background="#202020"
                CornerRadius="8"
                Padding="10"
                BorderBrush="#444"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Jugadores en la partida"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,0,6"/>

                <ListBox x:Name="lstPlayers"
                         Grid.Row="1"
                         Background="#202020"
                         BorderThickness="0"
                         Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="{Binding DisplayName}" />
                                <TextBlock Text="  (ID: " Foreground="#AAAAAA"/>
                                <TextBlock Text="{Binding AccountId}" Foreground="#AAAAAA"/>
                                <TextBlock Text=")" Foreground="#AAAAAA"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Window>
