<Window x:Class="WPFTheWeakestRival.MatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Match"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#FF1E1E1E">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Barra superior -->
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
            <!-- Contenido -->
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Barra superior fina con código pequeño -->
        <DockPanel Grid.Row="0" LastChildFill="False">
            <TextBlock x:Name="txtMatchCodeSmall"
                       Margin="4,0"
                       Foreground="LightGray"
                       FontSize="12"
                       VerticalAlignment="Center"
                       Text="Código:"/>
        </DockPanel>

        <!-- Título grande -->
        <TextBlock x:Name="txtMatchTitle"
                   Grid.Row="2"
                   Text="Partida"
                   FontSize="32"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,0,0,8"/>

        <!-- Panel jugadores -->
        <Border Grid.Row="4"
                CornerRadius="16"
                Padding="16"
                Background="#0FFFFFFF"
                BorderBrush="#33FFFFFF"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" LastChildFill="False">
                    <TextBlock Text="Jugadores"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock x:Name="txtPlayersSummary"
                               Margin="12,0,0,0"
                               Foreground="LightGray"/>
                </DockPanel>

                <Separator Grid.Row="1" Margin="0,4,0,4"/>

                <ListBox x:Name="lstPlayers"
                         Grid.Row="2"
                         BorderThickness="0"
                         Background="Transparent"
                         Foreground="White"/>
            </Grid>
        </Border>

        <!-- Botón cerrar abajo derecha -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cerrar"
                    Width="110"
                    Height="32"
                    Margin="0,0,0,0"
                    Click="BtnCloseClick"/>
        </StackPanel>
    </Grid>
</Window>
