<Window x:Class="WPFTheWeakestRival.MatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WPFTheWeakestRival.Controls"
        xmlns:loc="clr-namespace:WPFTheWeakestRival.Globalization"
        Title="{loc:Loc wndMatchTitle}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#FFEFEFEF">

    <Window.Resources>
        <SolidColorBrush x:Key="Brush.Turn.MyTurn" Color="#FF27AE60"/>
        <SolidColorBrush x:Key="Brush.Turn.OtherTurn" Color="#FF2C3E50"/>

        <Storyboard x:Key="CoinFlipStoryboard">
            <DoubleAnimation Storyboard.TargetName="CoinFlipRotateTransform"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="720"
                             Duration="0:0:1.5"
                             FillBehavior="Stop"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="txtMatchCodeSmall"
                       Grid.Column="0"
                       Margin="4,0"
                       VerticalAlignment="Center"
                       Foreground="#444"
                       FontSize="12"
                       Visibility="Hidden"
                       Text="{loc:Loc lblGameMatchCodePrefix}"/>

            <TextBlock x:Name="txtPhase"
                       Grid.Column="1"
                       Margin="0,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="#222"
                       Text="{loc:Loc lblGamePhaseDefault}"/>

            <!-- Timer -->
            <Border Grid.Column="2"
                    HorizontalAlignment="Right"
                    Width="200"
                    Height="70"
                    BorderBrush="Black"
                    BorderThickness="2"
                    Background="White"
                    CornerRadius="4"
                    Margin="0,4,4,4">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{loc:Loc lblGameTime}"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtTimer"
                               Text="--:--"
                               Margin="0,4,0,0"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Margin="0,8,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="4,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="{loc:Loc lblGameCurrentChain}"
                               FontSize="12"
                               Foreground="#555"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtChain"
                               Text="0.0"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,0,0,12">
                    <Border Height="40"
                            Margin="0,4"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="18">
                        <TextBlock Text="0.50"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Height="40"
                            Margin="0,4"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="18">
                        <TextBlock Text="0.40"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Height="40"
                            Margin="0,4"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="18">
                        <TextBlock Text="0.30"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Height="40"
                            Margin="0,4"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="18">
                        <TextBlock Text="0.20"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Height="40"
                            Margin="0,4"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="18">
                        <TextBlock Text="0.10"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="3" Margin="0,0,0,8">
                    <Border Height="30"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="2">
                        <TextBlock Text="{loc:Loc lblGameBank}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontWeight="Bold"/>
                    </Border>

                    <Border Height="90"
                            Margin="0,-2,0,0"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="2">
                        <TextBlock x:Name="txtBanked"
                                   Text="0.0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="4" Margin="0,8,0,0">
                    <TextBlock Text="{loc:Loc lblGamePlayers}"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#444"/>
                    <ListBox x:Name="lstPlayers"
                             Margin="0,4,0,0"
                             Height="110"
                             BorderThickness="1"
                             BorderBrush="#CCC"
                             Background="White"
                             Foreground="Black"/>
                    <TextBlock x:Name="txtPlayersSummary"
                               Margin="0,2,0,0"
                               FontSize="10"
                               Foreground="#666"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Border x:Name="TurnBannerBackground"
                            CornerRadius="40"
                            Background="{StaticResource Brush.Turn.OtherTurn}"
                            Opacity="0.95"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Padding="24,24,24,32"
                            Width="420">
                        <StackPanel HorizontalAlignment="Center">
                            <controls:AvatarControl x:Name="TurnAvatar"
                                                    Width="180"
                                                    Height="180"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>

                            <TextBlock x:Name="txtTurnPlayerName"
                                       Text="{loc:Loc lblGamePlayer}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>

                            <TextBlock x:Name="txtTurnLabel"
                                       Text="{loc:Loc lblGameWaitingForMatchStart}"
                                       FontSize="14"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- NO internacionalizar pregunta -->
                <Border Grid.Row="1"
                        Margin="0,0,0,8"
                        Background="#FFBFBFBF"
                        Height="40">
                    <TextBlock x:Name="txtQuestion"
                               Text="PREGUNTA"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"/>
                </Border>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- NO internacionalizar respuestas -->
                    <Button x:Name="btnAnswer1"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,4,4"
                            Background="#FFC8C8C8"
                            Click="AnswerButtonClick"
                            Content="OPCION 1"/>

                    <Button x:Name="btnAnswer2"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="4,0,0,4"
                            Background="#FFC8C8C8"
                            Click="AnswerButtonClick"
                            Content="OPCION 2"/>

                    <Button x:Name="btnAnswer3"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,4,4,0"
                            Background="#FFC8C8C8"
                            Click="AnswerButtonClick"
                            Content="OPCION 3"/>

                    <Button x:Name="btnAnswer4"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="4,4,0,0"
                            Background="#FFC8C8C8"
                            Click="AnswerButtonClick"
                            Content="OPCION 4"/>
                </Grid>

                <TextBlock x:Name="txtAnswerFeedback"
                           Grid.Row="3"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="Gray"/>
            </Grid>

            <Grid Grid.Column="2" Margin="12,0,4,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="btnBank"
                        Grid.Row="0"
                        Width="180"
                        Height="90"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        BorderBrush="Black"
                        BorderThickness="2"
                        Background="White"
                        Click="BtnBankClick">
                    <TextBlock Text="{loc:Loc btnGameSaveBank}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontWeight="SemiBold"/>
                </Button>

                <Border Grid.Row="1"
                        Margin="0,40,0,0"
                        Width="180"
                        Height="180"
                        HorizontalAlignment="Center"
                        CornerRadius="40"
                        Background="#FFAAAAAA"
                        BorderBrush="Black"
                        BorderThickness="2">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnWildcardPrev"
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                Margin="0,40,4,0"
                                VerticalAlignment="Center"
                                Content="◀"
                                Click="BtnWildcardPrevClick"
                                Visibility="Collapsed"/>

                        <StackPanel Grid.Column="1">
                            <Image x:Name="imgWildcardIcon"
                                   Width="80"
                                   Height="80"
                                   Margin="0,8,0,4"
                                   HorizontalAlignment="Center"
                                   Stretch="Uniform"
                                   Visibility="Collapsed"/>

                            <TextBlock x:Name="txtWildcardName"
                                       Text="{loc:Loc lblGameLifeline}"
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"
                                       Margin="0,4,0,0"/>

                            <Button x:Name="btnUseWildcard"
                                    Content="{loc:Loc btnGameUseLifeline}"
                                    Width="110"
                                    Height="30"
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    Click="BtnUseWildcardClick"
                                    IsEnabled="False"
                                    Visibility="Collapsed"/>
                        </StackPanel>

                        <Button x:Name="btnWildcardNext"
                                Grid.Column="2"
                                Width="24"
                                Height="24"
                                Margin="4,40,0,0"
                                VerticalAlignment="Center"
                                Content="▶"
                                Click="BtnWildcardNextClick"
                                Visibility="Collapsed"/>
                    </Grid>
                </Border>

                <!-- NO internacionalizar descripción del comodín -->
                <TextBlock x:Name="txtWildcardDescription"
                           Grid.Row="2"
                           Margin="8,8,8,0"
                           TextWrapping="Wrap"
                           FontSize="11"
                           Foreground="#444"
                           TextAlignment="Center"/>
            </Grid>
        </Grid>

        <Grid x:Name="IntroOverlay"
              Grid.Row="1"
              Background="#CC000000"
              Visibility="Collapsed">
            <Grid>
                <MediaElement x:Name="introVideo"
                              LoadedBehavior="Manual"
                              UnloadedBehavior="Stop"
                              MediaEnded="IntroVideo_MediaEnded"
                              Stretch="Uniform"/>
                <Button Content="{loc:Loc btnGameSkipIntro}"
                        Width="80"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="8"
                        Click="BtnSkipIntroClick"/>
            </Grid>
        </Grid>

        <!-- OVERLAY DEL VOLADO -->
        <Grid x:Name="CoinFlipOverlay"
              Grid.RowSpan="3"
              Background="#AA000000"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="1"
                   Width="160"
                   Height="160"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="/Assets/coin.png">
                <Image.RenderTransform>
                    <RotateTransform x:Name="CoinFlipRotateTransform"
                                     CenterX="80"
                                     CenterY="80"/>
                </Image.RenderTransform>
            </Image>

            <TextBlock x:Name="CoinFlipResultText"
                       Grid.Row="2"
                       Margin="0,16,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Text="{loc:Loc lblGameCoinFlipInProgress}"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Grid>

        <!-- OVERLAY EVENTO ESPECIAL (NO internacionalizar) -->
        <Grid x:Name="SpecialEventOverlay"
              Grid.RowSpan="3"
              Background="#AA000000"
              Visibility="Collapsed">
            <Border Width="620"
                    MaxWidth="820"
                    Padding="24"
                    Background="White"
                    CornerRadius="16"
                    BorderBrush="Black"
                    BorderThickness="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="SpecialEventTitleText"
                               Grid.Row="0"
                               Text="EVENTO ESPECIAL"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#222"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>

                    <TextBlock x:Name="SpecialEventDescriptionText"
                               Grid.Row="2"
                               Text="Descripción del evento..."
                               FontSize="14"
                               Foreground="#444"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>

                    <Button Grid.Row="4"
                            Content="OK"
                            Width="120"
                            Height="34"
                            HorizontalAlignment="Center"
                            Click="SpecialEventCloseButtonClick"/>
                </Grid>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <Button Content="{loc:Loc btnGlobalClose}"
                    Width="110"
                    Height="32"
                    Click="BtnCloseClick"/>
        </StackPanel>
    </Grid>
</Window>
