<Window x:Class="WPFTheWeakestRival.MatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WPFTheWeakestRival.Controls"
        Title="Match"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#FFEFEFEF">

    <Window.Resources>
        <!-- Colores de turno -->
        <SolidColorBrush x:Key="Brush.Turn.MyTurn" Color="#FF27AE60"/>
        <!-- Verde -->
        <SolidColorBrush x:Key="Brush.Turn.OtherTurn" Color="#FF2C3E50"/>
        <!-- Azul oscuro -->
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- barra superior -->
            <RowDefinition Height="*"/>
            <!-- contenido principal -->
            <RowDefinition Height="Auto"/>
            <!-- parte inferior -->
        </Grid.RowDefinitions>

        <!-- BARRA SUPERIOR: código y tiempo -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="txtMatchCodeSmall"
                       Grid.Column="0"
                       Margin="4,0"
                       VerticalAlignment="Center"
                       Foreground="#444"
                       FontSize="12"
                       Text="Código:"/>

            <!-- Caja TIEMPO (placeholder, luego lo llenamos desde código) -->
            <Border Grid.Column="1"
                    HorizontalAlignment="Right"
                    Width="200"
                    Height="70"
                    BorderBrush="Black"
                    BorderThickness="2"
                    Background="White"
                    CornerRadius="4"
                    Margin="0,4,4,4">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="TIEMPO"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtTimer"
                               Text="--:--"
                               Margin="0,4,0,0"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- CONTENIDO PRINCIPAL: columnas izquierda / centro / derecha -->
        <Grid Grid.Row="1" Margin="0,8,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>

            <!-- COLUMNA IZQUIERDA: escalera de cadena + banco + jugadores -->
            <Grid Grid.Column="0" Margin="4,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- cadena -->
                    <RowDefinition Height="Auto"/>
                    <!-- escalera -->
                    <RowDefinition Height="*"/>
                    <!-- espacio -->
                    <RowDefinition Height="Auto"/>
                    <!-- banco -->
                    <RowDefinition Height="Auto"/>
                    <!-- jugadores -->
                </Grid.RowDefinitions>

                <!-- Texto cadena actual -->
                <StackPanel Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="CADENA ACTUAL"
                               FontSize="12"
                               Foreground="#555"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtChain"
                               Text="0.0"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Escalera de valores -->
                <StackPanel Grid.Row="1" Margin="0,0,0,12">
                    <Border Height="40"
                            Margin="0,4"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="18">
                        <TextBlock Text="0.50"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Height="40"
                            Margin="0,4"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="18">
                        <TextBlock Text="0.40"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Height="40"
                            Margin="0,4"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="18">
                        <TextBlock Text="0.30"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Height="40"
                            Margin="0,4"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="18">
                        <TextBlock Text="0.20"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Height="40"
                            Margin="0,4"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="18">
                        <TextBlock Text="0.10"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- BANCO -->
                <StackPanel Grid.Row="3" Margin="0,0,0,8">
                    <Border Height="30"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="2">
                        <TextBlock Text="BANCO"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontWeight="Bold"/>
                    </Border>

                    <Border Height="90"
                            Margin="0,-2,0,0"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="2">
                        <TextBlock x:Name="txtBanked"
                                   Text="0.0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <!-- Lista de jugadores (pequeña abajo, opcional) -->
                <StackPanel Grid.Row="4" Margin="0,8,0,0">
                    <TextBlock Text="Jugadores"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#444"/>
                    <ListBox x:Name="lstPlayers"
                             Margin="0,4,0,0"
                             Height="110"
                             BorderThickness="1"
                             BorderBrush="#CCC"
                             Background="White"
                             Foreground="Black"/>
                    <TextBlock x:Name="txtPlayersSummary"
                               Margin="0,2,0,0"
                               FontSize="10"
                               Foreground="#666"/>
                </StackPanel>
            </Grid>

            <!-- COLUMNA CENTRAL: avatar + pregunta + respuestas -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- avatar -->
                    <RowDefinition Height="Auto"/>
                    <!-- barra de pregunta -->
                    <RowDefinition Height="Auto"/>
                    <!-- respuestas -->
                    <RowDefinition Height="Auto"/>
                    <!-- feedback -->
                </Grid.RowDefinitions>

                <!-- Avatar grande + nombre (banner de turno) -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Border x:Name="TurnBannerBackground"
                            CornerRadius="40"
                            Background="{StaticResource Brush.Turn.OtherTurn}"
                            Opacity="0.95"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Padding="24,24,24,32"
                            Width="420">
                        <StackPanel HorizontalAlignment="Center">
                            <controls:AvatarControl x:Name="TurnAvatar"
                                                    Width="180"
                                                    Height="180"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>

                            <TextBlock x:Name="txtTurnPlayerName"
                                       Text="Jugador"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>

                            <TextBlock x:Name="txtTurnLabel"
                                       Text="Esperando inicio de partida..."
                                       FontSize="14"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Barra de pregunta -->
                <Border Grid.Row="1"
                        Margin="0,0,0,8"
                        Background="#FFBFBFBF"
                        Height="40">
                    <TextBlock x:Name="txtQuestion"
                               Text="PREGUNTA"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Respuestas (2 x 2) -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnAnswer1"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,4,4"
                            Background="#FFC8C8C8"
                            Click="AnswerButtonClick"
                            Content="OPCION 1"/>

                    <Button x:Name="btnAnswer2"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="4,0,0,4"
                            Background="#FFC8C8C8"
                            Click="AnswerButtonClick"
                            Content="OPCION 2"/>

                    <Button x:Name="btnAnswer3"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,4,4,0"
                            Background="#FFC8C8C8"
                            Click="AnswerButtonClick"
                            Content="OPCION 3"/>

                    <Button x:Name="btnAnswer4"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="4,4,0,0"
                            Background="#FFC8C8C8"
                            Click="AnswerButtonClick"
                            Content="OPCION 4"/>
                </Grid>

                <!-- Feedback -->
                <TextBlock x:Name="txtAnswerFeedback"
                           Grid.Row="3"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="Gray"/>
            </Grid>

            <!-- COLUMNA DERECHA: guardar en banco + comodín -->
            <Grid Grid.Column="2" Margin="12,0,4,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Botón GUARDAR EN BANCO -->
                <Button x:Name="btnBank"
                        Grid.Row="0"
                        Width="180"
                        Height="90"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        BorderBrush="Black"
                        BorderThickness="2"
                        Background="White"
                        Click="BtnBankClick">
                    <TextBlock Text="GUARDAR EN BANCO"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontWeight="SemiBold"/>
                </Button>

                <!-- COMODÍN (estilo píldora) -->
                <Border Grid.Row="1"
                        Margin="0,40,0,0"
                        Width="140"
                        Height="160"
                        HorizontalAlignment="Center"
                        CornerRadius="40"
                        Background="#FFAAAAAA"
                        BorderBrush="Black"
                        BorderThickness="2">
                    <StackPanel Margin="8">
                        <Image x:Name="imgWildcardIcon"
                               Width="80"
                               Height="80"
                               Margin="0,8,0,4"
                               HorizontalAlignment="Center"
                               Stretch="Uniform"
                               Visibility="Collapsed"/>

                        <TextBlock x:Name="txtWildcardName"
                                   Text="COMODÍN"
                                   HorizontalAlignment="Center"
                                   FontWeight="Bold"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Descripción comodín abajo (pequeña) -->
                <TextBlock x:Name="txtWildcardDescription"
                           Grid.Row="2"
                           Margin="8,8,8,0"
                           TextWrapping="Wrap"
                           FontSize="11"
                           Foreground="#444"
                           TextAlignment="Center"/>
            </Grid>
        </Grid>

        <!-- OVERLAY INTRO VIDEO (si lo usas) -->
        <Grid x:Name="IntroOverlay"
              Grid.Row="1"
              Background="#CC000000"
              Visibility="Collapsed">
            <Grid>
                <MediaElement x:Name="introVideo"
                              LoadedBehavior="Manual"
                              UnloadedBehavior="Stop"
                              MediaEnded="IntroVideo_MediaEnded"
                              Stretch="Uniform"/>
                <Button Content="Saltar"
                        Width="80"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="8"
                        Click="BtnSkipIntroClick"/>
            </Grid>
        </Grid>

        <!-- BOTÓN CERRAR -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <Button Content="Cerrar"
                    Width="110"
                    Height="32"
                    Click="BtnCloseClick"/>
        </StackPanel>
    </Grid>
</Window>
