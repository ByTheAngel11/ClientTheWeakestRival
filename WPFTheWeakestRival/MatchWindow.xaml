<Window x:Class="WPFTheWeakestRival.MatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Match"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#FF1E1E1E">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Barra superior -->
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
            <!-- Contenido -->
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Barra superior fina con código pequeño -->
        <DockPanel Grid.Row="0" LastChildFill="False">
            <TextBlock x:Name="txtMatchCodeSmall"
                       Margin="4,0"
                       Foreground="LightGray"
                       FontSize="12"
                       VerticalAlignment="Center"
                       Text="Código:"/>
        </DockPanel>

        <!-- Título grande -->
        <TextBlock x:Name="txtMatchTitle"
                   Grid.Row="2"
                   Text="Partida"
                   FontSize="32"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,0,0,8"/>

        <!-- CONTENIDO: Jugadores + Comodín -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Panel jugadores -->
            <Border Grid.Column="0"
                    CornerRadius="16"
                    Padding="16"
                    Background="#0FFFFFFF"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" LastChildFill="False">
                        <TextBlock Text="Jugadores"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock x:Name="txtPlayersSummary"
                                   Margin="12,0,0,0"
                                   Foreground="LightGray"/>
                    </DockPanel>

                    <Separator Grid.Row="1" Margin="0,4,0,4"/>

                    <ListBox x:Name="lstPlayers"
                             Grid.Row="2"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="White"/>
                </Grid>
            </Border>

            <!-- Panel comodín del jugador -->
            <Border Grid.Column="1"
                    CornerRadius="16"
                    Padding="16"
                    Background="#0FFFFFFF"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- título -->
                        <RowDefinition Height="8"/>
                        <!-- separador -->
                        <RowDefinition Height="Auto"/>
                        <!-- imagen -->
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <!-- nombre -->
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                        <!-- descripción -->
                    </Grid.RowDefinitions>

                    <!-- Título -->
                    <TextBlock Text="Comodín"
                               Grid.Row="0"
                               FontWeight="SemiBold"
                               Foreground="White"/>

                    <Separator Grid.Row="1" Margin="0,4,0,4"/>

                    <!-- Imagen del comodín -->
                    <Image x:Name="imgWildcardIcon"
                           Grid.Row="2"
                           Width="96"
                           Height="96"
                           Margin="0,4,0,0"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>

                    <!-- Nombre / código -->
                    <TextBlock x:Name="txtWildcardName"
                               Grid.Row="4"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Text="Sin comodín"
                               TextAlignment="Center"
                               Margin="0,4,0,0"/>

                    <!-- Descripción -->
                    <TextBlock x:Name="txtWildcardDescription"
                               Grid.Row="6"
                               TextWrapping="Wrap"
                               Foreground="LightGray"
                               Margin="0,4,0,0"
                               TextAlignment="Center"
                               MaxWidth="260"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Botón cerrar abajo derecha -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cerrar"
                    Width="110"
                    Height="32"
                    Margin="0,0,0,0"
                    Click="BtnCloseClick"/>
        </StackPanel>
    </Grid>
</Window>
