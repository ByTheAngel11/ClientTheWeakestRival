<Window x:Class="WPFTheWeakestRival.LoginWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:WPFTheWeakestRival" mc:Ignorable="d" Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="20">
            <Image Height="100" Width="100"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="40,0,40,0" VerticalAlignment="Center" Height="375">
            <Label Content="Bienvenido" HorizontalAlignment="Center" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox TextWrapping="Wrap" Width="210" BorderBrush="DarkBlue" BorderThickness="1.5" Text="Correo Electronico" Background="White" Margin="0,0,0,10"/>
            <TextBox TextWrapping="Wrap" Width="210" BorderBrush="DarkBlue" BorderThickness="1.5" Text="Contraseña" Background="White" Margin="0,0,0,20"/>
            <Button Content="Iniciar Sesion" Width="101" Margin="0,0,0,10" Background="Transparent"/>
            <Button Content="¿Olvidaste tu contraseña?" Width="164" Background="Transparent" Margin="0,0,0,10" BorderThickness="0"/>
            <Button Content="¿No tienes cuenta?" Width="164" Background="Transparent" Margin="0,0,0,10" BorderThickness="0"/>
            <Button Content="Registrarse" Width="101" Margin="0,0,0,10" Background="Transparent"/>
            <Button Content="Jugar como invitado" Width="101" Margin="0,0,0,0" Background="Transparent"/>
        </StackPanel>
    </Grid>
</Window>