<Window x:Class="WPFTheWeakestRival.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:WPFTheWeakestRival.Globalization"
        mc:Ignorable="d"
        Title="LoginWindow"
        Height="540" Width="1100"
        MinWidth="1024" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        TextOptions.TextRenderingMode="Aliased"
        Background="Transparent">

    <Window.Resources>
        <BitmapImage x:Key="LoginWallBackground"
                     UriSource="pack://application:,,,/Assets/Backgrounds/LoginBackground.png" />
        <BitmapImage x:Key="NotePad"
                     UriSource="pack://application:,,,/Assets/Backgrounds/RegistrationBackground.png" />
    </Window.Resources>

    <Grid Margin="12">
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource LoginWallBackground}"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center" />
        </Grid.Background>

        <ComboBox x:Name="cmblanguage"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Margin="0,8,8,0"
                  Width="140"
                  Background="#AA000000"
                  BorderBrush="Transparent"
                  Foreground="Black"
                  SelectionChanged="CmbLanguageSelectionChanged">
            <ComboBoxItem Tag="es" Content="{loc:Loc es}" />
            <ComboBoxItem Tag="en" Content="{loc:Loc en}" />
            <ComboBoxItem Tag="pt" Content="{loc:Loc pt}" />
            <ComboBoxItem Tag="it" Content="{loc:Loc it}" />
            <ComboBoxItem Tag="fr" Content="{loc:Loc fr}" />
        </ComboBox>

        <Grid x:Name="doorHost"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Width="420"
              Height="520">

            <Image x:Name="registrationBackground"
                   Source="{StaticResource NotePad}"
                   Width="75"
                   Height="50"
                   Stretch="Uniform"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,170,-46,0"
                   Panel.ZIndex="5" />

            <Border x:Name="signBoard"
                    Width="184"
                    Height="161"
                    Background="#D9C6A4"
                    CornerRadius="10"
                    Padding="8"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Panel.ZIndex="10"
                    Margin="112,-13,0,0">
                <Image x:Name="logoImage"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>

            <Border Background="#CC222222"
                    CornerRadius="14"
                    Padding="20"
                    VerticalAlignment="Top"
                    Margin="52,153,0,0"
                    HorizontalAlignment="Left"
                    Panel.ZIndex="9"
                    Width="303">
                <StackPanel Width="260">

                    <Label x:Name="lblWelcome"
                           Content="{loc:Loc lblWelcome}"
                           HorizontalAlignment="Center"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,16"/>

                    <Grid Width="226"
                          Margin="0,0,0,10"
                          HorizontalAlignment="Center">
                        <TextBox x:Name="txtEmail"
                                 BorderBrush="DarkBlue"
                                 BorderThickness="1.5"
                                 Background="White"
                                 Padding="8,6"
                                 HorizontalContentAlignment="Center"/>

                        <TextBlock x:Name="placeholderEmail"
                                   Text="{loc:Loc emailPlaceholder}"
                                   Foreground="Gray"
                                   IsHitTestVisible="False"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Padding="5,2,5,2">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtEmail}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <Grid Width="226"
                          Margin="0,0,0,16"
                          HorizontalAlignment="Center">
                        <PasswordBox x:Name="pwdPassword"
                                     BorderBrush="DarkBlue"
                                     BorderThickness="1.5"
                                     Background="White"
                                     Padding="8,6,30,6"
                                     PasswordChanged="PwdPasswordChanged"
                                     GotFocus="PwdPasswordGotFocus"
                                     LostFocus="PwdPasswordLostFocus"
                                     HorizontalContentAlignment="Center"/>

                        <TextBox x:Name="txtPasswordVisible"
                                 BorderBrush="DarkBlue"
                                 BorderThickness="1.5"
                                 Background="White"
                                 Padding="8,6,30,6"
                                 Visibility="Collapsed"
                                 TextChanged="TxtPasswordVisibleTextChanged"
                                 HorizontalContentAlignment="Center"/>

                        <TextBlock x:Name="placeholderPassword"
                                   Text="{loc:Loc passwordPlaceHolder}"
                                   Foreground="Gray"
                                   IsHitTestVisible="False"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Padding="5,2,5,2"
                                   Visibility="Visible"/>

                        <Button x:Name="btnTogglePassword"
                                Width="20" Height="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,5,0"
                                BorderThickness="0"
                                Background="Transparent"
                                Click="BtnTogglePasswordClick">
                            <TextBlock Text="👁" FontSize="14"/>
                        </Button>
                    </Grid>

                    <Button x:Name="btnLogin"
                            Content="{loc:Loc btnLogin}"
                            Width="160"
                            Height="34"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,8"
                            Background="DarkBlue"
                            Foreground="White"
                            Click="BtnLoginClick"/>

                    <Button x:Name="btnForgotPassword"
                            Content="{loc:Loc forgotPassword}"
                            Width="200"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Foreground="White"
                            Margin="0,0,0,4"
                            BorderThickness="0"
                            Click="BtnForgotPassword"/>

                    <Button x:Name="btnNotAccount"
                            Content="{loc:Loc notAccount}"
                            Width="200"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Foreground="White"
                            Margin="0,0,0,8"
                            BorderThickness="0"
                            Click="RegistrationClick"/>

                    <Button x:Name="btnRegist"
                            Content="{loc:Loc regist}"
                            Width="160"
                            Height="34"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,8"
                            Background="DarkGreen"
                            Foreground="White"
                            Click="RegistrationClick"/>

                    <Button x:Name="btnPlayAsGuest"
                            Content="{loc:Loc playAsGuest}"
                            Width="180"
                            Height="34"
                            HorizontalAlignment="Center"
                            Background="Gray"
                            Foreground="White"
                            Click="BtnGuestLoginClick"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
