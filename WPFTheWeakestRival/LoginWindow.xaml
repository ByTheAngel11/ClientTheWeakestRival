<Window x:Class="WPFTheWeakestRival.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTheWeakestRival"
        xmlns:language="clr-namespace:WPFTheWeakestRival.Properties.Langs"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="20">
            <Image Name="logoImage" Height="393" Width="382"></Image>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="40,0,40,0" VerticalAlignment="Center" Height="375">
            <Label x:Name="lblWelcome" Content="{x:Static language:Lang.lblWelcome}" HorizontalAlignment="Center" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox x:Name="txtEmail" TextWrapping="Wrap" Width="210" BorderBrush="DarkBlue" BorderThickness="1.5" Text="{x:Static language:Lang.txtEmail}" Background="White" Margin="0,0,0,10"/>
            <TextBox x:Name="txtPassword" TextWrapping="Wrap" Width="210" BorderBrush="DarkBlue" BorderThickness="1.5" Text="{x:Static language:Lang.txtPassword}" Background="White" Margin="0,0,0,20"/>
            <Button x:Name="btnLogin" Content="{x:Static language:Lang.btnLogin}" Width="101" Margin="0,0,0,10" Background="Transparent"/>
            <Button x:Name="btnForgotPassword" Content="{x:Static language:Lang.forgotPassword}" Width="164" Background="Transparent" Margin="0,0,0,10" BorderThickness="0"/>
            <Button x:Name="btnNotAccount" Content="{x:Static language:Lang.notAccount}" Width="164" Background="Transparent" Margin="0,0,0,10" BorderThickness="0"/>
            <Button x:Name="btnRegist" Content="{x:Static language:Lang.regist}" Width="101" Margin="0,0,0,10" Background="Transparent" Click="RegistrationClick" />
            <Button x:Name="btnPlayAsGuest" Content="{x:Static language:Lang.playAsGuest}" Width="114" Margin="0,0,0,0" Background="Transparent"/>
        </StackPanel>
        <ComboBox x:Name="cmblanguage" Grid.Column="1" HorizontalAlignment="Left" Margin="280,0,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmblanguage_SelectionChanged_1"/>
    </Grid>
</Window>